{
  "name": "phosphobot-lerobot-desktop",
  "version": "1.0.0",
  "description": "Phosphobot Frontend + LeRobot Backend Electron App with uv package manager",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development npx concurrently \"npm run build-frontend:watch\" \"npx wait-on dist/index.html && electron .\"",
    "build": "npm run build-frontend && electron-builder",
    "build-frontend": "cd frontend && npm run build && cd .. && cp -r frontend/dist/* dist/ || cp -r frontend/build/* dist/ || echo 'No build output found'",
    "build-frontend:watch": "cd frontend && (npm run dev || npm run start) || echo 'Frontend watch mode not available'",
    "setup": "node scripts/setup.js",
    "clean": "rm -rf dist release node_modules frontend/node_modules",
    "lint": "cd frontend && npm run lint",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "build": {
    "appId": "com.yourcompany.phosphobot-lerobot",
    "productName": "Phosphobot LeRobot Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "robotics",
    "phosphobot",
    "lerobot",
    "ai",
    "machine-learning",
    "uv",
    "python"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-store": "^10.0.0",
    "tar": "^7.4.3",
    "extract-zip": "^2.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  },
  "bugs": {
    "url": "your-repo-url/issues"
  },
  "homepage": "your-repo-url#readme"
} 